<div class="header">
    <h1><a href="/login"> login</a></h1>
    <h1><a href="/register"> register</a></h1>
</div>

<div class="container">
    {{#if messages}}
    {{#each messages}}
    <div class="message">
        <p> Posted by : {{this.author.username}} </p>
        <p>{{this.content}}</p>
        <p>Created at: {{this.timestamp}}</p>
    </div>
    {{/each}}
    {{else}}
    <p>No messages to show</p>
    {{/if}}
</div>
